pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Mimoh6/star-agile-banking-finance.git'

                // Run Maven on a Unix agent.
                sh 'mvn -Dmaven.test.failure.ignore=true clean package'
            }
        }

        stage('Create Docker Image') {
            steps {
                sh 'docker build -t mimoh6/financeme:latest .'
            }
        }

        stage('Docker-Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aec20014-6412-4aa9-b8bd-9f11978f4246', passwordVariable: 'dockerpassword', usernameVariable: 'dockerlogin')]) {
                    sh 'docker login -u ${dockerlogin} -p ${dockerpassword}'
                    //withCredentials([string(credentialsId: 'docker', variable: 'dockervariable')]) {
                }
            }
        }

        stage('Push-Image') {
            steps {
                sh 'docker push mimoh6/financeme:1.0'
            }
        }
    }
}
